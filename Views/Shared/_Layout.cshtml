<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Eventos Deportivos</title>
    <!-- Bootstrap CSS cdn -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/CustomScripts/jsUsuario.js"></script>
    <script src="~/Scripts/CustomScripts/jsParticipante.js"></script>
    <script src="~/Scripts/CustomScripts/jsInscripcion.js"></script>
    <script src="~/Scripts/CustomScripts/jsEvento.js"></script>
    <script src="~/Scripts/CustomScripts/jsDeporte.js"></script>
    <script src="~/Scripts/CustomScripts/jsPremiacion.js"></script>
    <script src="~/Scripts/CustomScripts/jsFormaDePago.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="">@Html.ActionLink("Eventos Deportivos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link active", aria_current = "page" })
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Forms CRUD
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("VistaUsuario", "Usuario", new { area = "" })">Usuario</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("VistaParticipante", "Participante", new { area = "" })">Participante</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("VistaDeporte", "Deporte", new { area = "" })">Deporte</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("VistaFormaDePago", "FormaDePago", new { area = "" })">FormaDePago</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("VistaPremiacion", "Premiacion", new { area = "" })">Premiacion</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("VistaInscripcion", "Inscripcion", new { area = "" })">Inscripcion</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("VistaEvento", "Evento", new { area = "" })">Evento</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <!-- footer y contenido -->
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - Eventos Deportivos S.A</p>
        </footer>
    </div>
    <!-- Bootstrap JS y jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
